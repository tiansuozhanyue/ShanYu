<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.home.ui.ShopSearchActivity">

    <com.example.shanyu.widget.QyActionBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingRight="16dp"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/goback"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/common_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_home_1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/home_search_white_black" />

            <EditText
                android:id="@+id/edit_input"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入所需的书籍"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/color_black_E6"
                android:textColorHint="@color/color_black_24"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12.5dp"
            android:text="新华书店南昌分店"
            android:textColor="#e6000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/shop_name"
            android:background="@drawable/bg_home_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="14dp"
                android:text="综合评价"
                android:textColor="#b3000000"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_red"
                android:rating="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/goChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:drawableTop="@mipmap/tab_chat_selected"
            android:gravity="center_horizontal"
            android:text="聊天"
            android:textColor="@color/color_black_80"
            android:textSize="10sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@drawable/tab_text_color_shopinfo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/news"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="上新"
                    android:textColor="@drawable/tab_text_color_shopinfo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/action"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="活动"
                    android:textColor="@drawable/tab_text_color_shopinfo"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/tab_text_color_offers_line"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/news_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/tab_text_color_offers_line"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/action_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/tab_text_color_offers_line"
                    android:gravity="center"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@mipmap/home_fenlei_selected"
            android:drawablePadding="2.5dp"
            android:text="分类"
            android:textColor="#ffff570b"
            android:textSize="14sp" />


    </LinearLayout>


    <com.to.aboomy.banner.Banner
        android:id="@+id/mBanner"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:scrollbars="none" />

</LinearLayout>