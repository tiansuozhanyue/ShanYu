<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_pws_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/book_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="12.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_black_E6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/book_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/shop_dianpu"
                android:drawablePadding="3dp"
                android:text="新华书店"
                android:textColor="@color/color_black_80"
                android:textSize="14sp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#ffff570b"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/book_sum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textColor="#ffff570b"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_sum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".23"
                    android:textColor="#ffff570b"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/book_sum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="￥299"
                    android:textColor="#4d000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/book_persions"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="244人已付款"
                    android:textColor="#4d000000"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>