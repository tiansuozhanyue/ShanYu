<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".base.BaseActivity">

    <com.example.shanyu.widget.QyActionBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/base_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/common_back" />

        <TextView
            android:id="@+id/base_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/color_black_E6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/base_right_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="16dp"
            android:textColor="@color/color_black_B3"
            android:textSize="14sp" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/root_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>