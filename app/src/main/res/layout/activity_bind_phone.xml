<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.BindPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_pws_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请填写您的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/color_black_E6"
            android:textColorHint="#4d000000"
            android:textSize="14sp" />

        <include layout="@layout/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_input"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写验证码"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/color_black_E6"
                android:textColorHint="#4d000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/getCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="获取验证码"
                android:textColor="@drawable/tab_text_color_getcode"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <com.example.shanyu.widget.CirButton
        android:id="@+id/mCirButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:text="绑定" />

</LinearLayout>