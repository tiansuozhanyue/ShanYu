<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_round_white_5"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_common_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="5dp"
        android:textColor="@color/color_black_E6"
        android:textSize="16sp"
        tools:text="dialog内容" />

    <include layout="@layout/line_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_common_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_black_E6"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_black_12" />


        <TextView
            android:id="@+id/tv_common_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/color_red"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>