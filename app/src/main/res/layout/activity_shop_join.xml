<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.home.ui.ShopJoinActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_pws_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="入驻流程"
            android:textColor="@color/color_black_E6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/home_id_1"
                android:drawablePadding="9dp"
                android:gravity="center_horizontal"
                android:text="提交资料"
                android:textColor="@color/color_black_E6"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/home_flow_triangle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/home_shenhe"
                android:drawablePadding="9dp"
                android:gravity="center_horizontal"
                android:text="等待审核"
                android:textColor="@color/color_black_80"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/home_flow_triangle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/home_chengong"
                android:drawablePadding="9dp"
                android:gravity="center_horizontal"
                android:text="入驻成功"
                android:textColor="@color/color_black_80"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_pws_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="申请入驻"
            android:textColor="@color/color_black_E6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_name"
            style="@style/shop_input"
            android:hint="请填写您的姓名"
            android:inputType="text" />

        <include layout="@layout/line_view" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/shop_input"
            android:hint="请填写您的号码"
            android:inputType="phone"
            android:maxLength="11" />

        <include layout="@layout/line_view" />

        <EditText
            android:id="@+id/edit_code"
            style="@style/shop_input"
            android:hint="请填写您的身份证号" />

        <include layout="@layout/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/area0"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:drawableRight="@mipmap/common_more"
                android:gravity="center_vertical"
                android:text="请选择省"
                android:textColor="@drawable/address_select_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/area1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@mipmap/common_more"
                android:gravity="center_vertical"
                android:text="请选择市"
                android:textColor="@drawable/address_select_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/area2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:drawableRight="@mipmap/common_more"
                android:gravity="center_vertical"
                android:text="请选择区"
                android:textColor="@drawable/address_select_text_color"
                android:textSize="14sp" />


        </LinearLayout>

        <include layout="@layout/line_view" />

        <EditText
            android:id="@+id/edit_are"
            style="@style/shop_input"
            android:hint="请填写具体地址" />

        <TextView
            android:id="@+id/getPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:drawableTop="@mipmap/detail_photo"
            android:drawablePadding="10dp"
            android:text="请上传营业执照"
            android:textColor="@color/color_black_4D"
            android:textSize="14sp" />


    </LinearLayout>

    <com.example.shanyu.widget.CirButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:text="提交申请" />

</LinearLayout>