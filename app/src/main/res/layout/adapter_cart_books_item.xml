<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_login_radio"
        android:button="@null" />

    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/checkBox" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/bookCover"
        android:ellipsize="end"
        android:lines="1"
        android:text="四大名著全套小学生版全4册"
        android:textColor="@color/color_black_E6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bookPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookName"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/bookCover"
        android:text="￥32.23"
        android:textColor="@color/color_black_E6"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥299"
        android:layout_marginTop="32dp"
        android:layout_below="@id/bookName"
        android:layout_toRightOf="@id/bookPrice"
        android:textColor="@color/color_black_4D"
        android:textSize="12sp" />

    <com.example.shanyu.widget.ShopSumButton
        android:id="@+id/bookNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_black_4D"
        android:textSize="14sp" />


</RelativeLayout>